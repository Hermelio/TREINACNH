# O arquivo real no servidor contém as credenciais verdadeiras

# Django Settings
SECRET_KEY=sua-chave-secreta-aqui
DEBUG=False
ALLOWED_HOSTS=treinacnh.com.br,www.treinacnh.com.br,72.61.36.89,localhost

# Banco de Dados MySQL (Produção)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=treinacnh
DB_USER=integrador
DB_PASSWORD=sua-senha-mysql-aqui

# Configurações do Site
SITE_NAME=TREINACNH
SITE_URL=https://treinacnh.com.br

# Security Headers
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=0

# allauth
ACCOUNT_DEFAULT_HTTP_PROTOCOL=https

# ==========================================
# EMAIL — Produção (SMTP real)
# ==========================================
# Opção A: Gmail com App Password (recomendado para início)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=seuemail@gmail.com
# Gere em: https://myaccount.google.com → Segurança → Senhas de app
EMAIL_HOST_PASSWORD=xxxx_xxxx_xxxx_xxxx
# IMPORTANTE: DEFAULT_FROM_EMAIL deve ser o MESMO endereço de EMAIL_HOST_USER
# Gmail retorna erro 550 se o From não casar com a conta autenticada no SMTP
DEFAULT_FROM_EMAIL=TreinaCNH <seuemail@gmail.com>
SERVER_EMAIL=seuemail@gmail.com
# 14400 = 4 horas
PASSWORD_RESET_TIMEOUT=14400

# Opção B: SMTP próprio / SendGrid / Mailgun
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=SG.xxxxxxxxxxx

# ==========================================
# Mercado Pago
# ==========================================
MERCADOPAGO_PUBLIC_KEY=APP_USR-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
MERCADOPAGO_ACCESS_TOKEN=APP_USR-0000000000000000-000000-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-000000000
MERCADOPAGO_COLLECTOR_ID=0000000000

