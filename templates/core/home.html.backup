<!-- Instructors Bootstrap Carousel -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="mb-0"><i class="bi bi-patch-check-fill text-success me-2"></i>Instrutores Verificados</h3>
            <a href="{% url 'marketplace:cities_list' %}" class="btn btn-primary">Ver todos</a>
        </div>
        
        {% if featured_instructors %}
        <div id="instructorsCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="4000">
            <!-- Indicators -->
            <div class="carousel-indicators">
                {% for instructor in featured_instructors %}
                    <button type="button" data-bs-target="#instructorsCarousel" data-bs-slide-to="{{ forloop.counter0 }}" 
                            {% if forloop.first %}class="active" aria-current="true"{% endif %} 
                            aria-label="Slide {{ forloop.counter }}"></button>
                {% endfor %}
            </div>
            
            <!-- Slides -->
            <div class="carousel-inner">
                {% for instructor in featured_instructors %}
                <div class="carousel-item {% if forloop.first %}active{% endif %}">
                    <div class="row justify-content-center">
                        <div class="col-lg-8 col-md-10">
                            <div class="instructor-carousel-card">
                                <div class="position-relative">
                                    {% if instructor.user.profile.avatar %}
                                        <img src="{{ instructor.user.profile.avatar.url }}" 
                                             class="instructor-carousel-img" 
                                             alt="{{ instructor.user.get_full_name }}">
                                    {% else %}
                                        <div class="instructor-carousel-img no-photo">
                                            <i class="bi bi-person-fill"></i>
                                        </div>
                                    {% endif %}
                                    
                                    {% if instructor.is_verified %}
                                        <span class="instructor-badge-verified">
                                            <i class="bi bi-patch-check-fill me-1"></i>Verificado
                                        </span>
                                    {% endif %}
                                </div>
                                
                                <div class="p-4">
                                    <h4 class="mb-2">{{ instructor.user.get_full_name }}</h4>
                                    <p class="text-muted mb-2">
                                        <i class="bi bi-geo-alt-fill me-1"></i>
                                        {{ instructor.city.name }} - {{ instructor.city.state.code }}
                                    </p>
                                    
                                    {% if instructor.bio %}
                                        <p class="mb-3">{{ instructor.bio|truncatewords:25 }}</p>
                                    {% endif %}
                                    
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            {% if instructor.hourly_rate %}
                                                <span class="h5 text-success mb-0">R$ {{ instructor.hourly_rate }}/hora</span>
                                            {% endif %}
                                            {% if instructor.years_experience %}
                                                <p class="text-muted mb-0 mt-1">
                                                    <i class="bi bi-calendar-check me-1"></i>
                                                    {{ instructor.years_experience }} anos de experiência
                                                </p>
                                            {% endif %}
                                        </div>
                                        <a href="{% url 'marketplace:instructor_detail' pk=instructor.pk %}" 
                                           class="btn btn-primary btn-lg">
                                            Ver Perfil <i class="bi bi-arrow-right ms-2"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            
            <!-- Controls -->
            <button class="carousel-control-prev" type="button" data-bs-target="#instructorsCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#instructorsCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Próximo</span>
            </button>
        </div>
        {% else %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                Nenhum instrutor cadastrado ainda.
            </div>
        {% endif %}
    </div>
</section>

